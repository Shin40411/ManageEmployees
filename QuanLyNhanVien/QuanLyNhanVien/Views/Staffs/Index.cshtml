@model QuanLyNhanVien.Models.Staffs

@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">
    <div class="navbar navbar-inverse modal-title" style="border-radius: unset;">
        <div class="d-flex">
            <h2>Liệt kê nhân viên</h2>
            <p>
                <a href="#" onclick="AddnewStaff(0)"><i class="fa fa-plus-circle"></i> Thêm nhân viên mới</a>
            </p>
        </div>
    </div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th class="text-center">
                    No
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th class="text-center">
                    Xóa
                </th>
            </tr>
        </thead>

        <tbody id="SetStaffList">
            <tr id="LoadingList" class="text-center">
            </tr>

        </tbody>


    </table>
 
        <div class="modal fade" id="AddPopup">
            <div class="modal-dialog text-center">
                <div class="modal-content">
                    <div class="modal-header">
                        <a href="#" class="close" data-dismiss="modal">&times;</a>
                        <h4 id="ModalTitle" style="font-weight: bold; font-family: cursive;"></h4>
                    </div>
                    <div class="modal-body">
                        <form id="addform">
                            <fieldset id="SubmitForm">
                              
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.FullName, new { @id = "StaName", @class = "form-control", @placeholder = "Họ và tên" })

                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.Email, new { @id = "Email", @class = "form-control", @placeholder = "Email" })

                                </div>
                                <div class="form-group">
                                    @Html.TextAreaFor(model => model.Address, new { @id = "Address", @class = "form-control", @placeholder = "Địa chỉ" })
 

                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.Phone, new { @id = "Phone", @class = "form-control", @placeholder = "Số điện thoại" })

                                </div>
                                <div class="form-group">
                                    <a href="#" class="btn btn-success center-block" id="SubmitAdd">Thêm</a>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>

       <div class="modal fade" id="DeleteStaff">
           <div class="modal-dialog">
               <div class="modal-content">
                   @Html.HiddenFor(model => model.ID_Staff, new { @id = "StaId" })
                   <div class="modal-header">
                       <a href="#" class="close" data-dismiss="modal">&times;</a>
                       <h4 style="font-weight: bold; font-family: cursive; color: #ff1493;">Xóa nhân viên</h4>
                   </div>
                   <div class="modal-body">
                       <h4>Bạn có chắc muốn xóa nhân viên này?</h4> <br />
                       <h5 style="color: #d7d757;">Hành động này không thể hoàn tác</h5>
                   </div>
                   <div class="modal-footer">
                       <a href="#" data-dismiss="modal" class="btn btn-default">Hủy bỏ</a>
                       <a href="#" onclick="ConfirmDel()" class="btn btn-danger">Xóa</a>
                   </div>
               </div>
           </div>
       </div>
</div>

